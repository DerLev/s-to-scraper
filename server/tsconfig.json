{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "lib": ["ES2023", "DOM"],
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
